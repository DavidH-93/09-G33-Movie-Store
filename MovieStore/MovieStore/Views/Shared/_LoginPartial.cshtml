@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (User.IsInRole("Admin"))
{
<div class="nav navbar-nav navbar-right btn-group">
    <a class="navbar-link btn navbar-btn btn-info" id="staff-a" asp-controller="Staff" asp-action="Index">Staff</a>
    <a class="navbar-link btn navbar-btn btn-primary" id="dashboard-a" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    <a class="navbar-link btn navbar-btn btn-dark" id="admin-a" asp-controller="Admin" asp-action="Index">Admin</a>
</div>
}
else if (User.IsInRole("Staff"))
{
<div class="nav navbar-nav navbar-right btn-group">
    <a class="navbar-link btn navbar-btn btn-info" id="staff-a" asp-controller="Staff" asp-action="Index">Staff</a>
    <a class="navbar-link btn navbar-btn btn-primary" id="dashboard-a" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
</div>
}
else if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <div class="nav navbar-nav navbar-right btn-group">
                <a class="navbar-link btn btn-light" id="account-a" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
                <button class="navbar-link btn btn-outline-danger" id="logout-btn" type="submit" >Logout</button>
        </div>
    </form>
}
else
{
    <div class="nav navbar-nav navbar-right btn-group">
        <a class="btn navbar-btn btn-outline-success" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="btn navbar-btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
