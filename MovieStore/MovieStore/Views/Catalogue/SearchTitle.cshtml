@model List<MovieStore.ViewModels.CatalogueMovieViewModel>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card bg-transparent border-light">
                <div class="card-body">
                    <h5 class="card-title">Search for Titles</h5>
                    <form id="search-form" asp-controller="Catalogue" asp-action="SearchTitle" class="form form-inline" method="post">
                        <div class="form-group">
                            <input class="form-control" type="search" placeholder="Title" name="title" aria-label="Search" />
                            <button class="btn btn-outline-light" type="submit">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
            <div class="card bg-transparent border-light">
                <div class="card-body">
                    <h5 class="card-title">Search for Genres</h5>
                    <form id="search-form" asp-controller="Catalogue" asp-action="SearchGenre" class="form form-inline" method="post">
                        <div class="form-group">
                            <input class="form-control" type="search" placeholder="Genre" name="genre" aria-label="Search" />
                            <button class="btn btn-outline-light" type="submit">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-8">
            <h2 class="display-4">Results</h2>
            <ul class="list-unstyled">


                @foreach (var item in Model)
                {
                    <li class="media">
                        <div class="media-body">
                            <div class="card bg-transparent border-danger">
                                <h4 class="media-heading card-header">
                                    @item.Title
                                    <div class="btn-group pull-right" role="group">
                                        <a asp-controller="Catalogue" asp-action="Details" asp-route-id="@item.MovieID" class="btn btn-info">Details</a>
                                        <a asp-controller="Order" asp-action="Add" asp-route-id="@item.MovieID" class="btn btn-success">$@item.Price</a>
                                    </div>

                                </h4>
                                <div class="card-body">
                                    <h5 class="display-5">Synopsis</h5>
                                    <p class="card-text">
                                        @item.Description
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <ul class="list-group list-group-horizontal ">
                                        <li class="list-group-item bg-transparent text-white">@item.Genre</li>
                                        <li class="list-group-item bg-transparent text-white">Stock: @item.Stock</li>
                                        <li class="list-group-item bg-transparent text-white">Release: @item.Release</li>
                                        <li class="list-group-item bg-transparent text-white">Duration: @item.Duration</li>
                                        <li class="list-group-item bg-transparent text-white">Rating: @item.Rating</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>