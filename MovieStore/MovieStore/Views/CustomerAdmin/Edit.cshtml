@model MovieStore.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit user: @Model.Email</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="UserName" class="control-label" hidden></label>
                <input asp-for="UserName" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <br />
                @if (Model.Position == "Individual")
                {
                    <label class="control-label">Individual</label>
                    <input type="radio" value="Individual" id="Position" name="Position" checked />
                    <br />
                    <label class="control-label">Company</label>
                    <input type="radio" value="Company" id="Position" name="Position" />
                }
                else
                {
                    <label class="control-label">Individual</label>
                    <input type="radio" value="Individual" id="Position" name="Position" />
                    <br />
                    <label class="control-label">Company</label>
                    <input type="radio" value="Company" id="Position" name="Position" checked/>
                }
            </div>
            <div class="form-group">
                <label asp-for="Address.Line1" class="control-label"></label>
                <input asp-for="Address.Line1" class="form-control" />
                <span asp-validation-for="Address.Line1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Line2" class="control-label"></label>
                <input asp-for="Address.Line2" class="form-control" />
                <span asp-validation-for="Address.Line2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Locality.Name" class="control-label"></label>
                <input asp-for="Address.Locality.Name" class="form-control" />
                <span asp-validation-for="Address.Locality.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City.Name" class="control-label"></label>
                <input asp-for="Address.City.Name" class="form-control" />
                <span asp-validation-for="Address.City.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostCode.Code" class="control-label"></label>
                <input asp-for="Address.PostCode.Code" class="form-control" />
                <span asp-validation-for="Address.PostCode.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Region.Name" class="control-label"></label>
                <input asp-for="Address.Region.Name" class="form-control" />
                <span asp-validation-for="Address.Region.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Country.Name" class="control-label"></label>
                <input asp-for="Address.Country.Name" class="form-control" />
                <span asp-validation-for="Address.Country.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LockoutEnabled" class="control-label"></label>
                <input asp-for="LockoutEnabled" class="form-control" />
                <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Password" class="control-label" hidden></label>
                <input asp-for="Password" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
